 @model IEnumerable<MVCLab.Models.Employee>

<h2>Employees</h2>
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if (TempData["SuccessMessage"] != null)

{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)

{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Company</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)

        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.Salary</td>
                <td>@employee.Company?.Name</td>
                <td>@employee.Address</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a asp-action="GetById" asp-route-id="@employee.Id" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>

                    <!-- Use a form to delete the employee -->
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()  <!-- Add anti-forgery token -->
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
